<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.RecetaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FCFFDF">

        <Button
            android:id="@+id/btn_modo_lectura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo Lectura"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btnSalirModoLectura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir del Modo Lectura"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus Recetas"
            android:fontFamily="@font/display"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:textColor="#021D3D"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_agregar_Receta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Receta"
            android:textSize="20sp"
            android:textColor="#021D3D"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_recetas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_mensaje_recetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:text="Por el momento no tienes Recetas Guardadas"
            android:textSize="15sp"
            android:fontFamily="@font/roboto"
            android:textColor="#021D3D"
            android:textStyle="bold"
            />
    </LinearLayout>
</FrameLayout>